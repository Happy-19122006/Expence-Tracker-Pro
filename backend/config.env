# Database Configuration
MONGODB_URI=mongodb://localhost:27017/expense-tracker-pro
MONGODB_TEST_URI=mongodb://localhost:27017/expense-tracker-pro-test

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-expensetracker2024
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-expensetracker2024
JWT_REFRESH_EXPIRE=30d

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=ExpenseTracker Pro <noreply@expensetracker.com>

# OAuth Configuration - You need to get these from Google and Facebook
# Google OAuth Setup: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Facebook OAuth Setup: https://developers.facebook.com/
FACEBOOK_APP_ID=your-facebook-app-id-here
FACEBOOK_APP_SECRET=your-facebook-app-secret-here

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-expensetracker2024

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:8000
CLIENT_URL=http://localhost:8000

# API Configuration
API_VERSION=v1
API_BASE_URL=/api/v1
